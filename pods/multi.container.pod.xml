apiVersion: v1
kind: Pod
metadata:
  name: nginx
spec:
  containers:
    - name: main-ctr        
      image: groovecoding7/docker_deployment:1.0    
      ports:
        - containerPort: 80
	- name: helper-ctr
	  image: groovecoding7/nginxadapter:1.0
	  args: ["-nginx.scrape-uri","http://localhost/nginx_status"]
	  ports:
	  - containerPort: 9113